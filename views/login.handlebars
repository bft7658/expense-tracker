<div class="login-content-block col-12 mx-auto mb-5">
  <div class="card">
    <div class="card-body mb-2">
      <div class=" mt-2 col-7 mx-auto" style="border: px solid red;">
        <h2 class="text-center">登入</h2>
        <span class="notes ms-auto text-end d-block mt-3">
          <span class="text-danger">*</span>
          必填欄位
        </span>
      </div>

      <form class="mb-2 col-7 mx-auto" action="/users/login" method="post">
        <label for="email" class="form-label text-end px-0 mb-1">
          <span class="text-danger">*</span>
          Email：
        </label>
        <input type="email" class="form-control mb-3" id="email" name="email" value="{{email}}" placeholder="請輸入Email"required>
        <label for="password" class="form-label text-end px-0 mb-1">
          <span class="text-danger">*</span>
          密碼：
        </label>
        <input type="password" class="form-control mb-3" id="password" name="password" value="{{password}}"
          placeholder="請輸入密碼" required>
        <button type="submit" class="btn btn-warning d-block col-12 mx-auto my-3">登入</button>
        <span>還沒註冊帳號？</span>
        <a href="/users/register">註冊</a>
      </form>

    </div>
  </div>
</div>